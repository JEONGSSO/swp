<?xml version="1.0" encoding="UTF-8"?>

<!-- DTD 선언 -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="PointMapper">

	<!-- 행 수정 -->
	<update id="updatePoint">
		update user
		set upoint = upoint + #{upoint}
		where userid = #{userid}
	</update>
	
</mapper>